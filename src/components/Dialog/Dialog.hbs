<div class="ms-Dialog {{#if props.modifier}} ms-Dialog--{{props.modifier}} {{/if}}">
    {{#if props.closeIcon}}
        <button class="ms-Dialog-button ms-Dialog-button--close js-DialogAction--close">
          <i class="ms-Icon ms-Icon--{{props.closeIcon}}"></i>
        </button>
    {{/if}}
    <div class="ms-Dialog-header">
      <p class="ms-Dialog-title">{{props.title}}</p>
    </div>
    <div class="ms-Dialog-inner">
      <div class="ms-Dialog-content">
        {{#if props.subText}}
          <p class="ms-Dialog-subText">{{props.subText}}</p>
        {{/if}}
        {{#if props.components}}
          {{#each props.components}}
            {{renderPartial component props}}
          {{/each}}
        {{/if}}
      </div>
      {{#if props.actions}}
        <div class="ms-Dialog-actions">
          <div class="ms-Dialog-actionsRight">
          {{#each props.actions}}
            {{renderPartial component props}}
          {{/each}}
          </div>
        </div>
      {{/if}}
    </div>
</div>
