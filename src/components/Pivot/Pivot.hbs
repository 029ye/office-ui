<div class="ms-Pivot {{#each props.modifiers}} ms-Pivot--{{name}}{{/each}}">
  <ul class="ms-Pivot-links">
    {{#each props.links}}
      <li class="ms-Pivot-link {{state}}" data-content="{{name}}">
        {{text}}
        {{#if ellipsisIcon}}
          <i class="ms-Pivot-ellipsis ms-Icon ms-Icon--{{ellipsisIcon}}"></i>
        {{/if}}
      </li>
    {{/each}}
  </ul>
  {{#each props.links}}
    <div class="ms-Pivot-content" data-content="{{name}}">
      {{content}}
    </div>
  {{/each}}
</div>
